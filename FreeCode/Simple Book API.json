		{
			"name": "Book Info Auto",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"console.log(response);\r",
							"const myBooks = response.filter((book) => book.available == true);\r",
							"console.log(myBooks);\r",
							"const myBook = myBooks[0];\r",
							"console.log(myBook);\r",
							"\r",
							"if(myBook) {\r",
							"    pm.environment.set(\"myBookId\", myBook.id);\r",
							"}\r",
							"\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(myBook).to.be.an('object');\r",
							"    pm.expect(myBook.available).to.eql(true);\r",
							"});\r",
							"\r",
							"pm.test(\"Book not found\", () => {\r",
							"    pm.expect(myBook.type).to.eql(\"non-fiction\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
